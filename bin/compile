#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

#config variables
DBUS_DIR = "/app/dbus-lib"

echo "Compiling dbus"

#fail fast
set -e

#extract dbus
tar xf "/app/dbus-1.8.0.tar.gz"

mkdir DBUS_DIR
cd dbus-1.8.0

echo "Current directory: $(pwd)"
echo "Running configure"

./configure --prefix=DBUS_DIR
make
make install

cd ..
rm -rf dbus-1.8.0

